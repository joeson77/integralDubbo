*{
	padding:0;
	margin:0;
}
#container{
	width:100%;
	height:1000px;
}
#header{
	width:100%;
	height:70px;
	margin:0 auto;
	border-bottom:1px solid #E5E5E5;
}
#banner{
	width:95%;
	height:300px;
	
	margin:0 auto;
	margin-top:20px;
}

#center{
	width:100%;
	height:700px;
	margin:0 auto;
	margin-top:20px;
	float:center;
}

#content{
	width:80%;
	height:600px;
	margin-top:20px;
	margin-left:20px;
	float:left;
}

#menu{
	width:13%;
	height:250px;
	margin:0 auto;
	margin-top:20px;
	float:left;
	margin-left:40px;
	border-right:1px solid #E5E5E5;
	background-color:rgba(0,0,0,0.1);
}

#menu li{
	width:100%;
	height:50px;
	list-style:none;
	display:block;
	cursor:pointer;
    position: relative;
    margin-top:10px;
}

#menu li:hover{
	background-color:rgba(0,0,0,0.2);
}
.nav-img{
	width:25%;
	height:100%;
	margin-left:10px;
	float:left;
}
.nav-text{
	width:60%;
	height:100%;
	margin-left:10px;
	line-height:50px;
	float:left;
}
#menu li img{	
	width:40px;
	height:40px;
}

#menu li a:link{
	text-decoration:none;
	color:#999;
}
#menu li a:visited{
	text-decoration:none;
	color:#999;
}


#footer{
	width:100%;
	height:120px;
	margin-top:20px;
	background:#DE8611;
	border-top:1px solid #E5E5E5;
}
.center-item{
	width:25%;
	height:300px;
	float:left;
}
.item-content:hover{
	box-shadow:2px 2px 2px #E5E5E5;
}
.item-content{
	width:95%;
	height:95%;
	margin:0 auto;
	border:1px solid #E5E5E5;
}
.item-img{
	width:95%;
	height:75%;
	margin:0 auto;
	line-height:70%;
	border-bottom:1px dashed #E5E5E5;
}
.item-text{
	width:95%;
	height:20%;
	margin:0 auto;
	margin-top:2%;
	background:white;
}
.text-t{
	width:100%;
	height:70%;
	font-size:16px;
	color:#DE8611;
}
.donationTime{
	float:right;
	font-size:12px;
	color:#999999;
}
.donationName{
	float:left;
	font-size:14px;
	color:#555555;
}
#logo{
	width:10%;
	height:100%;
	float:left;
}
#nav{
	width:35%;
	height:100%;
	float:left;
}
#nav ul{
	width:100%;
	height:40%;
	list-style:none;
	margin-top:30px;
	padding:0;
}
#nav li{
	height:100%;
	float:left;
	margin-left:20px;
	text-align:center;
}
#nav li a{
	text-decoration:none;
	color:#999999;
}
.active{
	border-bottom:3px solid #DE8611;
}
#nav li:hover{
	border-bottom:3px solid #DE8611;
}
#title{
	width:95%;
	height:50px;
	line-height:50px;
	margin:0 auto;
	margin-top:30px;
	border-bottom:2px solid #DE8611;
	font-size:20px;
	color:#DE8611;
}

#item{
	width:95%;
	height:50px;
	margin:0 auto;
	margin-top:30px;
	font-size:20px;
	color:#DE8611;
}

#spa{
	float:right;
	font-size:14px;
	color:#999999;
}

#footer li{
	float:left;
	list-style:none;
	color:white;
}
#footer-list{
	width:20%;
	height:20px;
	margin:0 auto;
	margin-top:10px;
	text-align:center;
	font-size:12px;
}
#footer-list li{
	margin-left:10px;
}
#footer-p{
	text-align:center;
	color:white;
	margin-top:10px;
	font-size:10px;
}
#spa2{
	font-weight:bold;
}
#step{
	width:95%;
	height:100px;
	margin:0 auto;
	margin-top:50px;
}
.status{
	font-size:12px;
	color:#999;
}
#user {
	width: 20%;
	height: 70px;
	line-height:90px;
	float: right;
	margin-right:3%;
	text-align:right;
	
}
#user a:link{
	text-decoration:none;
	color: #DE8611;
}
#user a:visited{
	color: #DE8611;
}
