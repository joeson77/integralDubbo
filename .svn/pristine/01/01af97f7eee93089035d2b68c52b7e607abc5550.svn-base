#addContent{
	width:90%;
	height:80%;
	margin:0 auto;
}
.itemContainer{
	width:100%;
	height:50px;
}
.addItem{
	width:30%;
	height:50px;
	line-height:50px;
	text-align:right;
	font-size:16px;
	float:left;
}
.itemContent{
	width:60%;
	height:50px;
	line-height:50px;
	float:left;
	margin-left:40px;
}
#activeName,#startTime,#endTime,#activeType,#activeNeedIntegral,#activeDescribe{
	width:70%;
	height:40px;
	border:none;
	border-bottom:1px solid #999;
	outline:none;
}
.imgContainer{
	width:100%;
	height:70px;
	line-height:70px;
	
}
.btnContainer{
	width:100%;
	height:50px;
	text-align:center;
}
.a-upload {
    padding: 4px 10px;
    height: 30px;
    width:180px;
    line-height: 20px;
    position: relative;
    cursor: pointer;
    color: #999;
    background: white;
    border: 1px solid #999;
    border-radius: 4px;
    overflow: hidden;
    display: inline-block;
    *display: inline;
    *zoom: 1;
}

.a-upload  input {
    position: absolute;
    font-size: 100px;
    right: 0;
    top: 0;
    opacity: 0;
    filter: alpha(opacity=0);
    cursor: pointer
}

.a-upload:hover {
    color: #444;
    background: white;
    border-color: #DE8611;
    color:#DE8611;
    text-decoration: none
}
