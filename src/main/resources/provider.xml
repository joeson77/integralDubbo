<?xml version="1.0" encoding="GBK"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans      
    http://www.springframework.org/schema/beans/spring-beans.xsd        
    http://code.alibabatech.com/schema/dubbo        
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">  
   
    <!-- 提供方应用信息，用于计算依赖关系 -->  
    <dubbo:application name="provider"  />  
   
    <!-- 使用zookeeper广播注册中心暴露服务地址 -->  
    <dubbo:registry address="zookeeper://192.168.137.187:2181"/>  
   
    <!-- 用dubbo协议在20880端口暴露服务 -->  
    <dubbo:protocol name="dubbo" port="20882" />  
  
    <!-- 和本地bean一样实现服务 -->  
    <bean id="registerService" class="com.test.service.AddUserServiceImp" />  
    <!-- <bean id="newsService" class="com.test.service.NewsServiceImpl" /> -->
      
       
    <!-- 声明需要暴露的服务接口 -->  
    <dubbo:service interface="com.test.service.RegisterService" ref="registerService" timeout="1200000" />  
    <!--<dubbo:service interface="com.test.service.NewsService" ref="newsService" timeout="1200000" /> -->
   
</beans>  